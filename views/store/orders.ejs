<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <header
      class="bg-gradient-to-r from-purple-500 via-pink-500 to-pink-400 py-3 mr-20 ml-20 rounded-3xl mt-2 shadow-lg text-center"
    >
      <h1
        class="text-white text-4xl font-extrabold drop-shadow-lg tracking-wide"
      >
        ðŸ“¦ Your Orders
      </h1>
      <p class="text-white text-lg mt-2 opacity-90 italic">
        Track and manage your purchased books.
      </p>
    </header>
    <main
      class="container mx-auto bg-white shadow-lg rounded-lg py-3 mt-10 max-w-6xl"
    >
      <div class="flex flex-wrap justify-center gap-6">
        <% orderedBook.forEach(book => { %>
        <div
          class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm"
        >
          <img
            src="<%= book.URL %>"
            alt="<Book Image>"
            class="w-full h-96 object-contain bg-gray-100"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">
              <%= book.bookName %>
            </h3>
            <p class="text-gray-600 mb-1">
              <i class="fas fa-user mr-2"></i><%= book.author %>
            </p>

            <!-- Description Section -->
            <p class="text-gray-700 text-sm italic mb-2">
              <%= book.description %>
            </p>

            <div class="flex justify-between items-center mb-3">
              <span class="text-lg font-bold text-red-500"
                >Rs. <%= book.price %> || Rs. 50/day</span
              >
            </div>

            <div class="flex gap-3 flex-wrap">
              <button class="bg-orange-500 text-white p-2 rounded-lg">
                Booked âœ…
              </button>
              <form action="/delete-booking/<%= book._id %>" method="POST">
                <button class="bg-violet-500 text-white p-2 rounded-lg">
                  Cancel Order
                </button>
              </form>
              <a href="/" class="bg-blue-500 text-white p-2 rounded-lg">Back</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
