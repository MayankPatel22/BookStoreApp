<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <header
      class="relative py-4 mt-2 shadow-lg bg-cover bg-center mr-10 ml-10 rounded-3xl"
      style="
        background-image: url('https://images.unsplash.com/photo-1512820790803-83ca734da794');
      "
    >
      <div class="bg-black/50 absolute inset-0 rounded-3xl"></div>
      <div class="relative z-10 text-center">
        <h1 class="text-white text-4xl font-extrabold drop-shadow-lg">
          ðŸ“š Welcome to Our Book Store
        </h1>
        <p class="text-white text-lg mt-2 opacity-90">
          Find your next great read!
        </p>
      </div>
    </header>
    <main
      class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl"
    >
      <div class="flex flex-wrap justify-center gap-6">
        <% registeredBook.forEach(book => { %>
        <div
          class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm"
        >
          <img
            src="<%= book.URL %>"
            alt="<%= book.bookName %>"
            class="w-full h-96 object-contain bg-gray-100"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">
              <%= book.bookName %>
            </h3>
            <p class="text-gray-600 mb-1">
              <i class="fas fa-user mr-2"></i><%= book.author %>
            </p>

            <!-- Description Section -->
            <p class="text-gray-700 text-sm italic mb-2">
              <%= book.description %>
            </p>

            <div class="flex justify-between items-center mb-3">
              <span class="text-lg font-bold text-red-500">
                Rs. <%= book.price %> || Rs. 50/day
              </span>
            </div>

            <!-- Order Button -->
            <%- include('../partials/order-book', {book:book}) %>
            <form action="/address" method="post" class="inline">
              <input type="hidden" name="id" />
              <button
                type="submit"
                class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition duration-300"
              >
                Update Address
              </button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
