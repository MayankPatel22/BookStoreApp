<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <header
      class="bg-gradient-to-r from-purple-500 via-pink-500 to-pink-400 py-2 mt-2 mr-20 ml-20 rounded-3xl shadow-xl text-center"
    >
      <h1
        class="text-white text-4xl font-extrabold drop-shadow-lg tracking-wide"
      >
        ❤️ Your Favourite Books
      </h1>
      <p class="text-white text-lg mt-3 opacity-90 italic">
        Read books to get to the tip of the mountains!
      </p>
    </header>
    <main
      class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl"
    >
      <div class="flex flex-wrap justify-center gap-6">
        <% favouriteBook.forEach(book => { %>
        <div
          class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm"
        >
          <img
            src="<%= book.URL %>"
            alt="Image Book"
            class="w-full h-96 object-contain bg-gray-100"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-1">
              <%= book.bookName %>
            </h3>
            <p class="text-gray-600 mb-2">
              <i class="fas fa-user mr-2"></i><%= book.author %>
            </p>

            <!-- Description -->
            <p class="text-gray-700 text-sm mb-3 italic">
              <%= book.description %>
            </p>

            <div class="flex justify-between items-center mb-3">
              <span class="text-lg font-bold text-red-500">
                Rs. <%= book.price %> || Rs. 50/day
              </span>
              <div class="flex items-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-5 h-5 text-yellow-400 mr-1"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="text-gray-700"><%= book.Rating %></span>
              </div>
            </div>

            <div class="flex gap-3">
              <a
                href="/book-list"
                class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition"
              >
                Back
              </a>
              <form action="/delete-fav/<%= book._id %>" method="POST">
                <button
                  class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition"
                >
                  Remove
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
